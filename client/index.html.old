<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Linera Diary - Secret Diary on Blockchain</title>
        <link rel="stylesheet" href="styles.css" />
    </head>
    <body>
        <div class="container">
            <header>
                <h1>📔 Linera Diary</h1>
                <p>Your Secret Diary on the Blockchain</p>
            </header>

            <div id="status" class="status info">Connecting...</div>

            <!-- Initialize Diary Section -->
            <div id="initSection" class="card" style="display: none">
                <h2>🔐 Create Your Secret Diary</h2>
                <p style="margin-bottom: 20px; color: #666">
                    Create a secret phrase to protect your diary. Remember it
                    well - you'll need it to unlock your entries!
                </p>
                <div class="form-group">
                    <label for="secretPhrase"
                        >Secret Phrase (min 8 characters)</label
                    >
                    <input
                        type="password"
                        id="secretPhrase"
                        placeholder="Enter a memorable secret phrase..."
                    />
                </div>
                <button id="initBtn">Create Diary</button>
            </div>

            <!-- Diary Section (after initialization) -->
            <div id="diarySection" style="display: none">
                <!-- Unlock Section -->
                <div class="card">
                    <h2>🔓 Unlock Your Diary</h2>
                    <div class="form-group">
                        <label for="unlockPhrase">Enter Secret Phrase</label>
                        <input
                            type="password"
                            id="unlockPhrase"
                            placeholder="Enter your secret phrase..."
                        />
                    </div>
                    <button id="unlockBtn">Unlock</button>
                </div>

                <!-- Entries Display -->
                <div class="card">
                    <h2>📖 Your Entries</h2>
                    <div id="entriesList" class="entries-list">
                        <p class="empty">Unlock your diary to view entries</p>
                    </div>
                </div>

                <!-- New Entry Form (hidden until unlocked) -->
                <div id="newEntrySection" class="card" style="display: none">
                    <h2>✍️ New Entry</h2>
                    <div class="form-group">
                        <label for="entryTitle">Title</label>
                        <input
                            type="text"
                            id="entryTitle"
                            placeholder="Entry title..."
                            maxlength="100"
                        />
                        <div class="char-count" id="titleCount">0/100</div>
                    </div>
                    <div class="form-group">
                        <label for="entryContent">Content</label>
                        <textarea
                            id="entryContent"
                            placeholder="Write your thoughts..."
                            maxlength="2000"
                        ></textarea>
                        <div class="char-count" id="contentCount">0/2000</div>
                    </div>
                    <button id="saveEntryBtn">Save Entry</button>
                </div>
            </div>

            <!-- Activity Log -->
            <div class="activity-log">
                <h3>📊 Activity Log</h3>
                <div id="activityLog">
                    <p class="empty">No activity yet</p>
                </div>
            </div>

            <footer>
                <p>
                    Built on <strong>Linera Protocol</strong> | Secure Diary
                    dApp
                </p>
            </footer>
        </div>

        <script type="module" src="linera-diary.js"></script>
    </body>
</html>
